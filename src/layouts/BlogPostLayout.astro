---
import BaseLayout from './BaseLayout.astro';
import TagList from '../components/TagList.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  category: string;
  tags: string[];
}

const { title, description, pubDate, updatedDate, author, category, tags } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="max-w-3xl mx-auto">
    <header class="mb-8 pb-6 border-b border-gray-200">
      <a href={`/blog/category/${category}/`} class="inline-block text-xs font-semibold uppercase tracking-wide text-blue-600 mb-2">{category}</a>
      <h1 class="text-3xl font-bold leading-tight mb-3">{title}</h1>
      <p class="text-lg text-gray-500 mb-3">{description}</p>
      <div class="text-sm text-gray-500 mb-3">
        <span>By {author}</span>
        <span>&middot;</span>
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {updatedDate && (
          <span>
            &middot; Updated{' '}
            <time datetime={updatedDate.toISOString()}>
              {updatedDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
          </span>
        )}
      </div>
      <TagList tags={tags} />
    </header>
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
