---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{tags.length > 0 && (
  <div class="flex gap-1.5 flex-wrap">
    {tags.map((tag) => (
      <a href={`/tags/${tag}/`} class="text-xs px-2 py-0.5 bg-blue-50 text-blue-800 rounded-sm no-underline hover:opacity-80">#{tag}</a>
    ))}
  </div>
)}
