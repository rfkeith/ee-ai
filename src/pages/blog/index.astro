---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';
import CategoryNav from '../../components/CategoryNav.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Blog" description="All articles on engineering leadership, best practices, career growth, and AI">
  <h1 class="text-2xl font-bold mb-4">All Articles</h1>
  <CategoryNav />
  {sortedPosts.length > 0 ? (
    <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      {sortedPosts.map((post) => (
        <BlogPostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          category={post.data.category}
          tags={post.data.tags}
          url={`/blog/${post.id}/`}
        />
      ))}
    </div>
  ) : (
    <p class="text-gray-500 py-8">No published articles yet. Check back soon.</p>
  )}
</BaseLayout>
